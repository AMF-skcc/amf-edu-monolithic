<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.amf.edu.monolithic.domain.repository.TeamRepository">

    <select id="selectAllTeam" resultType="Team">
        SELECT ID
             , NAME
        FROM TEAM
    </select>

    <select id="selectTeamById" resultType="Team">
        SELECT ID
             , NAME
        FROM TEAM
        WHERE A.ID = #{id}
    </select>

    <insert id="createTeam">
        INSERT INTO
            TEAM(ID
                 , NAME)
        VALUES (
                #{id},
                #{name}
                )
    </insert>

    <update id="updateTeam">
        UPDATE TEAM
        SET
            NAME = #{team.name}
        WHERE
            ID = #{teamId}
    </update>

    <delete id="deleteTeam">
        DELETE FROM TEAM
        WHERE
            ID = #{teamId}
    </delete>

</mapper>
